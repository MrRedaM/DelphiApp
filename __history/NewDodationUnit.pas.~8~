unit NewDodationUnit;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TNewDodationForm = class(TForm)
    Panel1: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Label3: TLabel;
    Label4: TLabel;
    ComboBox1: TComboBox;
    ComboBox2: TComboBox;
    Button1: TButton;
    Button2: TButton;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  NewDodationForm: TNewDodationForm;

implementation

{$R *.dfm}

uses DataModuleUnit;

procedure TNewDodationForm.FormShow(Sender: TObject);
var
s : string; i : integer;
begin
  DM.DSComm.Active := true;
  DM.DSComm.Refresh;
  s := 'Fields (' + DM.DSComm.FieldValues['N_srv'].AsString + ') ';
  for i := 0 to DM.DSComm.FieldCount - 1 do
  begin
    s := s + DM.DSComm.Fields[i].AsString + ' ';
  end;

  ShowMessage(s);
  DM.DSComm.Active := false;
  //DM.QueryDodation.SQL.Add('select *)
end;

end.
